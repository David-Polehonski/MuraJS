	<div class="{{{inputWrapperClass}}}" id="field-{{name}}-container">
		<div class="mura-radio-group">
			<div class="mura-group-label">{{#if summary}}{{summary}}{{else}}{{label}}{{/if}}{{#if isrequired}} <ins>Required</ins>{{/if}}</div>
			{{#if summary}}</br>{{/if}}
			{{#eachStatic dataset}}
				<div class="{{{radioWrapperClass}}}">
					<input type="radio" name="{{../name}}" class="{{{radioClass}}}" id="field-{{datarecordid}}" value="{{value}}"  {{#if isselected}}checked='checked'{{/if}}/>
					<label for="field-{{datarecordid}}" class="{{{radioLabelClass}}}">{{label}}</label>
				</div>
			{{/eachStatic}}
		</div>
	</div>
